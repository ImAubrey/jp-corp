---
import Container from "../components/container.astro";
import Sectionhead from "../components/sectionhead.astro";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { getLocale } from "astro-i18n-aut";
import { useTranslations } from "../utils/i18n";

// Get locale and translations function
const locale = getLocale(Astro.url);
const t = useTranslations(Astro.url);
---

<Layout title={t('contact.title')}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">{t('contact.title')}</Fragment>
      <Fragment slot="desc">{t('contact.subtitle')}</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">{t('contact.heading')}</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          {t('contact.description')}
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>{t('contact.address')}</span>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
            <a href="mailto:i@4eva.org">i@4eva.org</a>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" />
            <a href="tel:+15622139670">{t('contact.phone')}</a>
          </div>
        </div>
      </div>
      <div class="h-96 rounded-lg overflow-hidden">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6480.116073847961!2d139.8013289!3d35.7001894!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60188ecd2c991d17%3A0x397b8b938d42078f!2zSmFwYW4sIOOAkjEzMC0wMDExIFRva3lvLCBTdW1pZGEgQ2l0eSwgSXNoaXdhcmEsIDItY2jFjW1l4oiSMTPiiJIxIOeUsOS4reODk-ODqw!5e0!3m2!1sen!2sus!4v1740983800908!5m2!1sen!2sus"
          width="100%"
          height="100%"
          style="border:0;"
          loading="lazy"
          allowfullscreen>
        </iframe>
      </div>
    </div>
  </Container>
</Layout>
