---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">About Astrix</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Astrix</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          For inquiries and support, please contact us using the information below.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>2-13-1 Ishiwara, Sumida-ku, Tokyo, Japan</span>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:i@4eva.org"
              >i@4eva.org</a
            >
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+81-3-6748-2111">+1 (562) 2139 670</a
            >
          </div>
        </div>
      </div>
      <div class="h-96 rounded-lg overflow-hidden">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6480.116073847961!2d139.8013289!3d35.7001894!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60188ecd2c991d17%3A0x397b8b938d42078f!2zSmFwYW4sIOOAkjEzMC0wMDExIFRva3lvLCBTdW1pZGEgQ2l0eSwgSXNoaXdhcmEsIDItY2jFjW1l4oiSMTPiiJIxIOeUsOS4reODk-ODqw!5e0!3m2!1sen!2sus!4v1740983800908!5m2!1sen!2sus"
          width="100%"
          height="100%"
          style="border:0;"
          loading="lazy"
          allowfullscreen>
        </iframe>
      </div>
    </div>
  </Container>
</Layout>
