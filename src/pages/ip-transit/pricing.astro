---
import Container from "../../components/container.astro";
import Layout from "../../layouts/Layout.astro";
import { getLocale } from "astro-i18n-aut";
import { useTranslations } from "../../utils/i18n";

const locale = getLocale(Astro.url);
const t = useTranslations(Astro.url);

function createLocalePath(path: string) {
  if (locale === "en") {
    return path;
  }
  return `/${locale}${path}`;
}

const pricingSnapshot = [
  {
    nameKey: "ipTransit.services.initialSetup.name",
    priceKey: "ipTransit.services.initialSetup.price",
    noteKey: "transitPricing.snapshot.setupNote",
  },
  {
    nameKey: "ipTransit.services.maintenance.name",
    priceKey: "ipTransit.services.maintenance.price",
    noteKey: "transitPricing.snapshot.maintenanceNote",
  },
  {
    nameKey: "ipTransit.services.ipBlock.name",
    priceKey: "ipTransit.services.ipBlock.price",
    noteKey: "transitPricing.snapshot.ipBlockNote",
  },
  {
    nameKey: "ipTransit.services.geolocation.name",
    priceKey: "ipTransit.services.geolocation.price",
    noteKey: "transitPricing.snapshot.geolocationNote",
  },
];

const pillars = [
  {
    titleKey: "transitPricing.pillars.item1.title",
    descriptionKey: "transitPricing.pillars.item1.description",
  },
  {
    titleKey: "transitPricing.pillars.item2.title",
    descriptionKey: "transitPricing.pillars.item2.description",
  },
  {
    titleKey: "transitPricing.pillars.item3.title",
    descriptionKey: "transitPricing.pillars.item3.description",
  },
];

const rules = [
  "transitPricing.rules.item1",
  "transitPricing.rules.item2",
  "transitPricing.rules.item3",
];
---

<Layout title={t("transitPricing.title")}>
  <div class="bg-gradient-to-b from-slate-50 via-white to-slate-100">
    <Container class="py-16">
      <div class="relative overflow-hidden rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-sm md:p-12">
        <div aria-hidden="true" class="absolute -top-32 right-0 h-56 w-56 rounded-full bg-slate-200/60 blur-3xl"></div>
        <div aria-hidden="true" class="absolute -bottom-32 left-0 h-56 w-56 rounded-full bg-slate-100/80 blur-3xl"></div>

        <div class="relative grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
          <div>
            <span class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1 text-xs font-semibold tracking-[0.2em] text-slate-500">
              {t("transitPricing.hero.badge")}
            </span>
            <h1 class="mt-4 text-4xl font-bold text-slate-900 lg:text-5xl lg:tracking-tight">
              {t("transitPricing.hero.title")}
            </h1>
            <p class="mt-4 text-lg text-slate-600">
              {t("transitPricing.hero.description")}
            </p>
            <div class="mt-6 flex flex-wrap gap-3">
              <a
                href={createLocalePath("/ip-transit/")}
                class="inline-flex items-center justify-center rounded-full bg-slate-900 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800"
              >
                {t("transitPricing.hero.primaryCta")}
              </a>
              <a
                href={createLocalePath("/contact/")}
                class="inline-flex items-center justify-center rounded-full border border-slate-300 px-6 py-3 text-sm font-semibold text-slate-700 transition hover:border-slate-400 hover:text-slate-900"
              >
                {t("transitPricing.hero.secondaryCta")}
              </a>
            </div>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <p class="text-xs font-semibold tracking-[0.3em] text-slate-400">
              {t("transitPricing.snapshot.title")}
            </p>
            <div class="mt-5 space-y-4">
              {pricingSnapshot.map((item) => (
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <p class="text-sm font-semibold text-slate-900">{t(item.nameKey)}</p>
                    <p class="text-xs text-slate-500">{t(item.noteKey)}</p>
                  </div>
                  <div class="text-sm font-semibold text-slate-900">{t(item.priceKey)}</div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </Container>
  </div>

  <Container>
    <section class="mt-16">
      <div class="flex max-w-3xl flex-col gap-3">
        <h2 class="text-3xl font-bold text-slate-900">{t("transitPricing.pillars.title")}</h2>
        <p class="text-lg text-slate-600">{t("transitPricing.pillars.subtitle")}</p>
      </div>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        {pillars.map((pillar) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
            <h3 class="text-lg font-semibold text-slate-900">{t(pillar.titleKey)}</h3>
            <p class="mt-3 text-sm text-slate-600">{t(pillar.descriptionKey)}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="mt-16 grid items-start gap-8 lg:grid-cols-[1.1fr_0.9fr]">
      <div>
        <h2 class="text-3xl font-bold text-slate-900">{t("transitPricing.rules.title")}</h2>
        <p class="mt-4 text-lg text-slate-600">{t("transitPricing.subtitle")}</p>
      </div>
      <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <ul class="space-y-4 text-sm text-slate-600">
          {rules.map((rule) => (
            <li class="flex items-start gap-3">
              <span class="mt-1 h-2 w-2 rounded-full bg-slate-900"></span>
              <span>{t(rule)}</span>
            </li>
          ))}
        </ul>
      </div>
    </section>

    <section class="mt-16 rounded-2xl border border-slate-200 bg-slate-50 p-6 shadow-sm md:p-8">
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
          <h3 class="text-xl font-semibold text-slate-900">{t("transitPricing.policy.title")}</h3>
          <p class="mt-2 text-sm text-slate-600">{t("transitPricing.policy.description")}</p>
        </div>
        <a
          href={createLocalePath("/ip-transit/")}
          class="inline-flex items-center justify-center rounded-full border border-slate-300 px-5 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-400 hover:text-slate-900"
        >
          {t("transitPricing.policy.cta")}
        </a>
      </div>
    </section>

    <section class="mt-16 mb-20 text-center">
      <h3 class="text-2xl font-semibold text-slate-900">{t("transitPricing.cta.title")}</h3>
      <p class="mt-3 text-base text-slate-600">{t("transitPricing.cta.description")}</p>
      <div class="mt-6">
        <a
          href={createLocalePath("/contact/")}
          class="inline-flex items-center justify-center rounded-full bg-slate-900 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800"
        >
          {t("transitPricing.cta.button")}
        </a>
      </div>
    </section>
  </Container>
</Layout>
