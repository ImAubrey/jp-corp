---
import Container from "../container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { getLocale } from "astro-i18n-aut";
import { useTranslations } from "../../utils/i18n";
import { detectGeoLocation, shouldShowBroadband } from "../../utils/geo";
import LanguageSwitcher from "../LanguageSwitcher.astro";

// Get current locale
const locale = getLocale(Astro.url);
const t = useTranslations(Astro.url);

// 检测用户地理位置
const geoLocation = await detectGeoLocation();
const showBroadband = shouldShowBroadband(geoLocation, Astro.url);

// Define menu items with translation keys
const baseMenuItems = [
  {
    titleKey: "nav.home",
    path: "/",
  },
  {
    titleKey: "nav.hosting",
    path: "/hosting/",
  },
  {
    titleKey: "nav.dataCenters",
    path: "/data-centers/",
  },
  {
    titleKey: "nav.ipTransit",
    path: "/ip-transit/",
  },
];

// 条件性添加家庭宽带菜单项
const conditionalMenuItems = showBroadband ? [
  {
    titleKey: "nav.broadband",
    path: "/broadband/",
  }
] : [];

const endMenuItems = [
  {
    titleKey: "nav.timeline",
    path: "/timeline/",
  },
  {
    titleKey: "nav.contact",
    path: "/contact/",
  },
];

// 合并菜单项
const menuitems = [...baseMenuItems, ...conditionalMenuItems, ...endMenuItems];

// Function to create locale-aware paths
function createLocalePath(path: string) {
  if (locale === "en") {
    return path;
  }
  return `/${locale}${path}`;
}
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-slate-200 bg-white/90 backdrop-blur">
  <Container>
    <div class="flex flex-col lg:flex-row justify-between items-center py-3 lg:py-2">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href={createLocalePath("/")} class="text-base"
            ><span class="font-bold text-slate-800">{t("nav.logoFirstLetter")}</span><span
              class="text-slate-500">{t("nav.logoRest")}</span
            >
          </a>
          <div class="flex items-center lg:hidden">
            <div class="mr-3">
              <LanguageSwitcher />
            </div>
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-2 lg:items-center">
            {
              menuitems.map((item) => (
                <>
                  <li>
                    <a
                      href={createLocalePath(item.path)}
                      class="flex lg:px-2.5 py-1.5 items-center text-gray-600 hover:text-gray-900">
                      <span>{t(item.titleKey)}</span>
                    </a>
                  </li>
                </>
              ))
            }
            <li class="lg:ml-1">
              <LanguageSwitcher />
            </li>
          </ul>
        </MenuItems>
      </Astronav>
    </div>
  </Container>
</header>
