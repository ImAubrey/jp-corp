---
import { Icon } from "astro-icon/components";

export interface Props {
  locale: string;
  t: (key: string) => string;
}

const { locale, t } = Astro.props;

// Helper function to create locale-aware paths
function createLocalePath(path: string) {
  if (locale === "en") {
    return path;
  }
  return `/${locale}${path}`;
}

const enterpriseServices = [
  {
    nameKey: "home.enterprise.services.transit.name",
    descriptionKey: "home.enterprise.services.transit.description", 
    priceKey: "home.enterprise.services.transit.price",
    icon: "bx:bx-network-chart",
    path: "/ip-transit/"
  },
  {
    nameKey: "home.enterprise.services.hosting.name",
    descriptionKey: "home.enterprise.services.hosting.description",
    priceKey: "home.enterprise.services.hosting.price", 
    icon: "bx:bx-server",
    path: "/hosting/"
  },
  {
    nameKey: "home.enterprise.services.maintenance.name",
    descriptionKey: "home.enterprise.services.maintenance.description",
    priceKey: "home.enterprise.services.maintenance.price",
    icon: "bx:bx-wrench",
    path: "/contact/"
  }
];
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <div class="relative">
      <!-- Enterprise infrastructure illustration -->
      <div class="absolute -top-8 -left-10 h-28 w-28 rounded-full bg-sky-300/40 blur-3xl glow"></div>
      <div class="absolute -bottom-10 -right-10 h-32 w-32 rounded-full bg-emerald-300/30 blur-3xl glow"></div>
      <div class="glass-panel rounded-3xl p-8 w-96 h-96 flex items-center justify-center relative overflow-hidden floaty">
        <!-- Infrastructure grid -->
        <div class="grid grid-cols-3 gap-6 items-center">
          <!-- Top row -->
          <div class="bg-slate-800 rounded-xl p-3 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="bx:bx-world" class="text-white w-6 h-6" />
          </div>
          <div class="bg-slate-900 rounded-xl p-3 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="bx:bx-cloud" class="text-white w-6 h-6" />
          </div>
          <div class="bg-slate-800 rounded-xl p-3 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="bx:bx-network-chart" class="text-white w-6 h-6" />
          </div>
          
          <!-- Middle row - vertical spacer -->
          <div class="h-4"></div>
          <div class="h-4"></div>
          <div class="h-4"></div>
          
          <!-- Center server -->
          <div class="bg-slate-900 rounded-2xl p-4 shadow-lg col-span-3 flex justify-center">
            <Icon name="bx:bx-server" class="text-white w-12 h-12" />
          </div>
          
          <!-- Bottom spacer -->
          <div class="h-4"></div>
          <div class="h-4"></div>
          <div class="h-4"></div>
          
          <!-- Bottom row -->
          <div class="bg-slate-800 rounded-xl p-3 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="bx:bx-shield" class="text-white w-6 h-6" />
          </div>
          <div class="bg-slate-800 rounded-xl p-3 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="bx:bx-wrench" class="text-white w-6 h-6" />
          </div>
          <div class="bg-slate-800 rounded-xl p-3 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="bx:bx-support" class="text-white w-6 h-6" />
          </div>
        </div>
        
        <!-- Status indicators -->
        <div class="absolute top-4 right-4 glass-chip text-slate-700 text-xs px-3 py-1 rounded-full font-semibold">
          Enterprise Ready
        </div>
        <div class="absolute bottom-4 left-4 glass-chip text-slate-700 text-xs px-3 py-1 rounded-full font-semibold">
          24/7 Support
        </div>
      </div>
    </div>
  </div>
  
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-slate-900">
      {t('home.enterprise.hero.title')}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {t('home.enterprise.hero.subtitle')}
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <a
        href={createLocalePath("/contact/")}
        class="flex gap-1 items-center justify-center bg-slate-900 text-white px-6 py-3 rounded-full hover:bg-slate-800 transition-all font-medium shadow-lg shadow-slate-900/20">
        <Icon class="text-white w-5 h-5" name="bx:bx-message-dots" />
        {t('home.enterprise.hero.primaryCta')}
      </a>
      <a
        href={createLocalePath("/ip-transit/")}
        class="flex gap-1 items-center justify-center glass-chip text-slate-700 px-6 py-3 rounded-full hover:text-slate-900 transition-all font-medium">
        <Icon class="w-5 h-5" name="bx:bx-network-chart" />
        {t('home.enterprise.hero.secondaryCta')}
      </a>
    </div>
  </div>
</main>

<!-- Services Preview Section -->
<div class="mt-16">
  <div class="text-center mb-12">
    <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-slate-900">
      {t('home.enterprise.services.title')}
    </h2>
    <p class="text-xl mt-4 text-slate-600 max-w-3xl mx-auto">
      {t('home.enterprise.services.subtitle')}
    </p>
  </div>

  <div class="grid md:grid-cols-3 gap-8">
    {
      enterpriseServices.map((service) => (
        <div class="glass-card lift rounded-2xl p-6">
          <div class="flex gap-4 items-start">
            <div class="mt-1 bg-slate-900 rounded-full p-3 w-12 h-12 shrink-0 shadow-lg shadow-slate-900/20">
              <Icon class="text-white w-6 h-6" name={service.icon} />
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-xl text-slate-900 mb-2">{t(service.nameKey)}</h3>
              <p class="text-slate-600 mb-3 leading-relaxed">{t(service.descriptionKey)}</p>
              <div class="flex items-center justify-between">
                <span class="text-lg font-bold text-slate-900">{t(service.priceKey)}</span>
                <a 
                  href={createLocalePath(service.path)} 
                  class="inline-flex items-center space-x-1 text-slate-900 hover:text-slate-600 font-medium"
                >
                  <span>{t('home.enterprise.services.learnMore')}</span>
                  <Icon name="bx:bx-right-arrow-alt" class="w-4 h-4" />
                </a>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
