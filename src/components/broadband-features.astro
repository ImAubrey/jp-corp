---
import { Icon } from "astro-icon/components";

export interface Props {
  locale: string;
  t: (key: string) => string;
}

const { locale, t } = Astro.props;

// Helper function to create locale-aware paths
function createLocalePath(path: string) {
  if (locale === "en") {
    return path;
  }
  return `/${locale}${path}`;
}

const broadbandFeatures = [
  {
    titleKey: "home.broadband.features.speed.title",
    descriptionKey: "home.broadband.features.speed.description",
    icon: "bx:bx-tachometer"
  },
  {
    titleKey: "home.broadband.features.reliability.title", 
    descriptionKey: "home.broadband.features.reliability.description",
    icon: "bx:bx-shield"
  },
  {
    titleKey: "home.broadband.features.coverage.title",
    descriptionKey: "home.broadband.features.coverage.description", 
    icon: "bx:bx-map"
  },
  {
    titleKey: "home.broadband.features.support.title",
    descriptionKey: "home.broadband.features.support.description",
    icon: "bx:bx-phone"
  },
  {
    titleKey: "home.broadband.features.pricing.title",
    descriptionKey: "home.broadband.features.pricing.description",
    icon: "bx:bx-purchase-tag"
  },
  {
    titleKey: "home.broadband.features.installation.title",
    descriptionKey: "home.broadband.features.installation.description",
    icon: "bx:bx-wrench"
  }
];
---

<div class="mt-16">
  <div class="text-center mb-12">
    <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-slate-900">
      {t('home.broadband.features.title')}
    </h2>
    <p class="text-xl mt-4 text-slate-600 max-w-3xl mx-auto">
      {t('home.broadband.features.subtitle')}
    </p>
  </div>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
    {
      broadbandFeatures.map((item) => (
        <div class="glass-card lift rounded-2xl p-6">
          <div class="flex gap-4 items-start">
            <div class="mt-1 bg-slate-900 rounded-full p-2 w-8 h-8 shrink-0 shadow-lg shadow-slate-900/20">
              <Icon class="text-white" name={item.icon} />
            </div>
            <div>
              <h3 class="font-semibold text-lg text-slate-900">{t(item.titleKey)}</h3>
              <p class="text-slate-600 mt-2 leading-relaxed">{t(item.descriptionKey)}</p>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <!-- Coverage Map Section -->
  <div class="glass-panel rounded-3xl p-8 mb-16">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h3 class="text-3xl font-bold text-slate-900 mb-6">{t('home.broadband.coverage.title')}</h3>
        <p class="text-lg text-slate-600 mb-6">{t('home.broadband.coverage.description')}</p>
        
        <div class="space-y-4 mb-8">
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-slate-900 rounded-full"></div>
            <span class="font-medium text-slate-900">{t('home.broadband.coverage.available')}</span>
            <span class="text-slate-600">- {t('home.broadband.coverage.tokyo')} & {t('home.broadband.coverage.kanagawa')}</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-slate-500 rounded-full"></div>
            <span class="font-medium text-slate-900">{t('home.broadband.coverage.expanding')}</span>
            <span class="text-slate-600">- {t('home.broadband.coverage.saitama')} & {t('home.broadband.coverage.chiba')}</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-slate-400 rounded-full"></div>
            <span class="font-medium text-slate-900">{t('home.broadband.coverage.planned')}</span>
            <span class="text-slate-600">- {t('home.broadband.coverage.other')}</span>
          </div>
        </div>

        <a 
          href={createLocalePath("/broadband/")} 
          class="inline-flex items-center space-x-2 bg-slate-900 text-white px-6 py-3 rounded-full hover:bg-slate-800 transition-all font-medium shadow-lg shadow-slate-900/20"
        >
          <span>{t('home.broadband.coverage.checkCoverage')}</span>
          <Icon name="bx:bx-right-arrow-alt" class="w-5 h-5" />
        </a>
      </div>
      
      <div class="relative">
        <!-- Simple map representation -->
        <div class="glass-card lift rounded-2xl p-6">
          <h4 class="font-semibold text-slate-900 mb-4 text-center">{t('home.broadband.coverage.mapTitle')}</h4>
          <div class="relative h-64 bg-slate-100/70 rounded-lg overflow-hidden">
            <!-- Tokyo area -->
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
              <div class="relative">
                <div class="w-16 h-16 bg-slate-400 rounded-full opacity-30 animate-pulse"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-8 h-8 bg-slate-900 rounded-full flex items-center justify-center shadow-lg shadow-slate-900/20">
                  <Icon name="bx:bx-wifi" class="text-white w-4 h-4" />
                </div>
                <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 text-xs font-medium text-slate-700 whitespace-nowrap">
                  Tokyo/Kanagawa
                </div>
              </div>
            </div>
            
            <!-- Expanding areas -->
            <div class="absolute top-1/4 right-1/4">
              <div class="w-12 h-12 bg-slate-300 rounded-full opacity-20 animate-pulse"></div>
              <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-6 h-6 bg-slate-500 rounded-full"></div>
            </div>
            
            <div class="absolute bottom-1/3 left-1/4">
              <div class="w-12 h-12 bg-slate-300 rounded-full opacity-20 animate-pulse"></div>
              <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-6 h-6 bg-slate-500 rounded-full"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="text-center glass-dark rounded-3xl p-12 text-white relative overflow-hidden">
    <div class="absolute -top-10 -right-10 w-32 h-32 rounded-full bg-white/20 blur-2xl floaty"></div>
    <div class="absolute -bottom-12 -left-8 w-40 h-40 rounded-full bg-sky-400/20 blur-2xl glow"></div>
    <h3 class="text-3xl font-bold mb-4">{t('home.broadband.cta.title')}</h3>
    <p class="text-xl mb-8 opacity-90">{t('home.broadband.cta.subtitle')}</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href={createLocalePath("/broadband/")} 
        class="inline-flex items-center justify-center px-8 py-3 bg-white text-slate-900 font-medium rounded-full hover:bg-slate-100 transition-all shadow-lg shadow-black/10"
      >
        {t('home.broadband.cta.primary')}
      </a>
      <a 
        href={createLocalePath("/contact/")} 
        class="inline-flex items-center justify-center px-8 py-3 border border-white/70 text-white font-medium rounded-full hover:bg-white hover:text-slate-900 transition-all"
      >
        {t('home.broadband.cta.secondary')}
      </a>
    </div>
  </div>
</div>
