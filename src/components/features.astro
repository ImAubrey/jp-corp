---
// @ts-ignore
import { Icon } from "astro-icon/components";

export interface Props {
  locale: string;
  t: (key: string) => string;
}

const { locale, t } = Astro.props;

const features = [
  {
    titleKey: "home.solutions.features.cloudComputing.title",
    descriptionKey: "home.solutions.features.cloudComputing.description",
    icon: "bx:bxs-cloud",
  },
  {
    titleKey: "home.solutions.features.serverHosting.title",
    descriptionKey: "home.solutions.features.serverHosting.description",
    icon: "bx:bxs-server",
  },
  {
    titleKey: "home.solutions.features.edgeComputing.title",
    descriptionKey: "home.solutions.features.edgeComputing.description",
    icon: "bx:bxs-network-chart",
  },
  {
    titleKey: "home.solutions.features.transit.title",
    descriptionKey: "home.solutions.features.transit.description",
    icon: "bx:bxs-network-chart",
  },
  {
    titleKey: "home.solutions.features.hardwareLeasing.title",
    descriptionKey: "home.solutions.features.hardwareLeasing.description",
    icon: "bx:bxs-devices",
  },
  {
    titleKey: "home.solutions.features.lirServices.title",
    descriptionKey: "home.solutions.features.lirServices.description",
    icon: "bx:bxs-shield",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    {t('home.solutions.title')}
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    {t('home.solutions.description')}
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{t(item.titleKey)}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{t(item.descriptionKey)}</p>
        </div>
      </div>
    ))
  }
</div>
