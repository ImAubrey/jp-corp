---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Reliable Connectivity",
    description:
      "Quality bandwidth options with carefully selected carriers to ensure stable and dependable network connections for your business.",
    icon: "bx:bxs-network-chart",
  },
  {
    title: "Responsive Support",
    description:
      "Dedicated support team ready to assist with your technical needs and answer questions promptly.",
    icon: "bx:bxs-help-circle",
  },
  {
    title: "Secure Hosting",
    description:
      "Essential security measures to protect your data and hardware with modern safeguards and best practices.",
    icon: "bx:bxs-shield",
  },
  {
    title: "Cloud Options",
    description:
      "Simple yet effective cloud hosting solutions that can grow alongside your business requirements.",
    icon: "bx:bxs-cloud",
  },
  {
    title: "Equipment Management",
    description:
      "Hands-on management of your network infrastructure with regular check-ups to ensure optimal performance.",
    icon: "bx:bxs-server",
  },
  {
    title: "Backup Solutions",
    description:
      "Basic backup services to help protect your important data and minimize potential disruptions.",
    icon: "bx:bxs-server",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Internet & Data Center Solutions
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Offering accessible ISP and IDC services designed for growing businesses, with the personal attention 
    and flexibility that only a new, dedicated team can provide.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
